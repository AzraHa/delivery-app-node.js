<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Sale item</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
<main role="main">
    <% include partials/navbar %>
    <div class="container-fluid">
        <div class="row">
            <%include partials/sidebar %>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
                    <h1 class="h2">Dashboard</h1>
                </div>
                <div class="card" style="border: 1px solid orange;">
                    <% for(let i=0;i<sale.length;i++){ %>
                    <div class="card-body" style="border-top: 1px solid orange;">
                        <div class="card-header">
                            <h3 class="card-title"><%= sale[i].name  %></h3>
                        </div>
                        <div class="card-body">
                            <form action="/adminRestaurant/sale/edit/<%= sale[i]._id%>" method="post" enctype="multipart/form-data">
                                <div class="container">
                                    <div class="container__text">
                                        <div class="container__image" style="width: 100%!important;">
                                            <div class="container__image" style="margin:0 auto;">
                                                <input type="image" class="container__image"
                                                       src="../../images/<%= sale[i].picture%>"
                                                       id="picture"
                                                       name="img">
                                                <input type="file" accept="image/*" class="container__image"
                                                       id="picture"
                                                       name="picture">
                                            </div>
                                            <div class="container__text">
                                                <label>Name</label>
                                                <input type="hidden" name="food" value="<%=sale[i].food._id%>">
                                                <p id="name" name="name" class="form-control" placeholder="Name" style="border: 1px solid #F9723D"><%= sale[i].food.name %></p>
                                                    <label>Date From</label>
                                                    <input type="date"
                                                           id="date_from"
                                                           name="date_from"
                                                           class="form-control"
                                                           placeholder="Date From"
                                                           value="<%= sale[i].date_from %>">

                                                    <label>Date To</label>
                                                    <input type="date"
                                                       id="date_to"
                                                       name="date_to"
                                                       class="form-control"
                                                       placeholder="Date Tom"
                                                       value="<%= sale[i].date_to %>">
                                                <label>Price</label>
                                                <input type="text"
                                                   id="price"
                                                   name="price"
                                                   class="form-control"
                                                   placeholder="Price"
                                                   value="<%= sale[i].salePrice%>">
                                                <label>Status</label>
                                                <select id="status"  name="status" class="form-control select2" style="width: 100%;">
                                                    <option value="" disabled selected>Status</option>
                                                    <option value="true">Active</option>
                                                    <option value="false">Inactive</option>
                                                </select>
                                                <p class="project-actions text-right">
                                                    <button type="submit" class="btn btn-success">Submit</button>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
