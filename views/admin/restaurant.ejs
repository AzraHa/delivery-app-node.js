<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Restaurant</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
<main role="main">
    <% include partials/navbar %>
    <div class="container-fluid">
        <div class="row">
            <%include partials/sidebar %>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
                    <h1 class="h2">Dashboard</h1>
                </div>
                <div class="card" style="border: 1px solid orange;">
                    <div class="card-body" style="border-top: 1px solid orange;">
                        <% for(let i=0;i<restaurant.length;i++){ %>
                        <div class="card-header">
                            <h3 class="card-title"><%= restaurant[i].name  %></h3>
                        </div>
                            <div class="card-body">
                                <div class="e-profile">
                                    <div class="tab-content pt-3">
                                        <div class="tab-pane active">
                                            <form action="/admin/restaurants/<%=restaurant[0]._id%>" method="post" enctype="multipart/form-data">
                                                <div class="container">
                                                    <div class="container__image">
                                                        <input type="image" class="container__image"
                                                               src="../../images/<%= restaurant[i].image %>"
                                                               id="picture"
                                                               name="img">
                                                        <input type="file" accept="image/*" class="container__image"
                                                               id="picture"
                                                               name="picture">
                                                    </div>
                                                    <div class="container__image">
                                                        <div id="googleMap" class="form-control " style=" position: relative; overflow: hidden; width: 100%; margin: 5px; height: 400px;"></div>
                                                    </div>

                                                    <div class="container__text">
                                                        <label>Name</label>
                                                        <p class="form-control" style="border:1px solid #F9723D;color:#495057;"><%= restaurant[i].name%></p>
                                                        <label>Address</label>
                                                        <div class="input-group mb-3">
                                                            <input type="text"
                                                                   id="address"
                                                                   name="address"
                                                                   class="form-control"
                                                                   placeholder="Address"
                                                                   value="<%= restaurant[i].address %>">
                                                            <div class="input-group-append" >
                                                                <div class="input-group-text">
                                                                    <span class="fa fa-map-marker" id="dugme"></span>
                                                                </div>
                                                                <div class="input-group-text">
                                                                    <span class="fa fa-search" id="submit"></span>
                                                                </div>
                                                                <input type="hidden" id="koordinate" name="koordinate" value="<%= restaurant[i].koordinate%>">
                                                            </div>

                                                        </div>
                                                        <label>Email</label>
                                                        <input type="email"
                                                               id="email"
                                                               name="email"
                                                               class="form-control"
                                                               value="<%= restaurant[i].email%>">
                                                        <label>Type</label>
                                                        <select id="tip"  name="tip" class="form-control select2" style="width: 100%;">
                                                            <option value="<%= restaurant[i].tip._id%>" disabled selected><%= restaurant[i].tip.name%></option>
                                                            <% if (typeof tip !== 'undefined' && tip.length > 0) {%>
                                                            <%for (var j = 0; j < tip.length; j++) { %>
                                                                <option  name ="tip" value="<%= tip[j]._id%>"><%= tip[j].name %></option>
                                                            <%}%>
                                                            <%}%>
                                                        </select>
                                                        <p class="project-actions text-right">
                                                            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                                Suppliers
                                                            </button>
                                                            <button type="submit" class="btn btn-success">Submit</button>
                                                        </p>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="collapse mt-3" id="collapseExample">
                                <div class="card" >
                                    <div class="card-header">
                                        <h3 class="card-title">Suppliers</h3>
                                    </div>
                                    <div class="card-body">
                                        <table id="example1" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Address</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <% if (typeof supplier !== 'undefined' && supplier.length > 0) {%>
                                                <%for (var j = 0; j <supplier.length; j++) { %>
                                                    <tr>
                                                        <td><a href="/admin/suppliers/<%=supplier[i]._id%>"> <%= supplier[i].name %></a></td>
                                                        <td><%= supplier[i].email %></td>
                                                        <td><%= supplier[i].s_address %></td>
                                                        <% if(supplier[i].status === true){%>
                                                            <td>Active</td>
                                                        <%} else {%>
                                                            <td>X</td>
                                                        <%}%>
                                                    </tr>
                                                <%}%>
                                            <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <%}%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    const adresa = document.getElementById("koordinate").value;
    //console.log(adresa,typeof adresa);
    const adres = adresa.replace("(","").replace(")","");
    const nova = adres.split(",");
    var latitude = parseFloat(nova[0]);
    var longitude = parseFloat(nova[1]);
    var addd = document.getElementById("address").value;
    //console.log(latitude,longitude);
    const adrese =[];
    adrese.push([latitude,longitude,addd]);

    function myMap() {
        var mapProp= {
            center:new google.maps.LatLng(latitude,longitude),
            zoom:18,
        };
        var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
        const geocoder = new google.maps.Geocoder();
        var x = document.getElementById("address");
        var y = document.getElementById("koordinate");
        for (i = 0; i < adrese.length; i++) {
            var icon = '';
            if (adrese[i][0].length !== '' && adrese[i][1].length !== '') {

                var marker = new google.maps.Marker({
                    position: new google.maps.LatLng(adrese[i][0], adrese[i][1]),
                    map: map,
                    title: "adresa"+i,
                });

                var contentString = adrese[i][2];
                var infowindow = new google.maps.InfoWindow({
                    content: contentString,
                    maxWidth: 160
                });
                infowindow.open(map, marker);

                // Event that closes the Info Window with a click on the map
                google.maps.event.addListener(map, 'click', (function(infowindow) {
                    return function() {
                        infowindow.close();
                    }
                })(infowindow));

                google.maps.event.addListener(marker, 'click', (function(marker, i) {
                    return function() {
                        var contentString = adrese[i][2];
                        infowindow.setContent(contentString);
                        infowindow.open(map, marker);
                    }
                })(marker, i));

            }
        }

        document.getElementById("dugme").addEventListener("click", () => {
            getLocation();
        });
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                x.value = "Geolocation is not supported by this browser.";
            }
        }

        function showPosition(position) {
            const latlng = {
                lat: position.coords.latitude,
                lng:position.coords.longitude
            };
            y.value = '('+latlng.lat+','+latlng.lng+')';
            console.log(y);

            geocoder.geocode({ location: latlng }, (results, status) => {
                if (status === "OK") {
                    if (results[0]) {
                        x.value = results[0].formatted_address;
                        placeMarker(latlng);
                    } else {
                        window.alert("No results found");
                    }
                } else {
                    window.alert("Geocoder failed due to: " + status);
                }
            });

        }
        document.getElementById("submit").addEventListener("click", () => {
            geocodeAddress(geocoder, map);
        });
        var Mar;

        function placeMarker(location) {
            if ( Mar ) {
                Mar.setPosition(location);
                geocoder.geocode({ location}, (results, status) => {
                    if (status === "OK") {
                        if (results[0]) {
                            infowindow.setContent(results[0].formatted_address);
                            //console.log(results[0].formatted_address);
                            x.value = results[0].formatted_address;
                            infowindow.open(map, Mar);
                        } else {
                            window.alert("No results found");
                        }
                    } else {
                        window.alert("Geocoder failed due to: " + status);
                    }
                });
            } else {
                Mar = new google.maps.Marker({
                    position: location,
                    map: map
                });
                Mar.setPosition(location);
                geocoder.geocode({ location }, (results, status) => {
                    if (status === "OK") {
                        if (results[0]) {
                            infowindow.setContent(results[0].formatted_address);
                            //console.log(results[0].formatted_address);
                            x.value = results[0].formatted_address;
                            infowindow.open(map, Mar);
                        } else {
                            window.alert("No results found");
                        }
                    } else {
                        window.alert("Geocoder failed due to: " + status);
                    }
                });
            }
        }
        function geocodeAddress(geocoder, resultsMap) {
            const address = document.getElementById("address").value;
            geocoder.geocode({ address: address }, (results, status) => {
                if (status === "OK") {
                    resultsMap.setCenter(results[0].geometry.location);
                    y.value = results[0].geometry.location;
                    console.log(y);
                    new google.maps.Marker({
                        map: resultsMap,
                        position: results[0].geometry.location,
                    });
                } else {
                    alert("Geocode was not successful for the following reason: " + status);
                }
            });
        }
        google.maps.event.addListener(map, 'click', function(event) {
            placeMarker(event.latLng);
            y.value = event.latLng;
            console.log(y)
        });



    }

</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCfOHwnQrFUSJ1CSq0-z2-mvUyeZM10ADg&callback=myMap"></script>
</body>
</html>

