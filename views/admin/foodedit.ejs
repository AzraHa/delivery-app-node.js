<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <!-- Fontawesome-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- Fontawesome-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
<main role="main">
    <% include partials/navbar %>
    <div class="container-fluid">
        <div class="row">
            <%include partials/sidebar %>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
                    <h1 class="h2">Dashboard</h1>
                </div>
                <div class="card" style="border: 1px solid orange;">
                    <div class="card-body" style="border: 1px solid orange;">
                        <div class="card-header">
                            <% for(let i=0;i<food.length;i++){%>
                            <h3 class="card-title">Food Item</h3>
                        </div>
                        <div class="card-body">
                            <div class="e-profile">
                                <div class="tab-content pt-3">
                                    <div class="tab-pane active">
                                            <form action="/admin/food/<%= food[0]._id %>" method="POST" enctype="multipart/form-data">
                                                <p>Modified : <%= food[i].modified %> </p>
                                                <div class="container">
                                                    <div class="container__image">
                                                    <input type="image" class="container__image"
                                                           src="https://mtdata.ru/u7/photo53A0/20946911428-0/original.jpg#20946911428"
                                                           id="picture"
                                                           name="picture">
                                                    <input type="file" accept="image/*" class="container__image"
                                                           id="picture"
                                                           name="picture">
                                                    </div>
                                                    <div class="container__text">
                                                        <label>Food</label>
                                                        <input type="text"
                                                               id="name"
                                                               name="name"
                                                               class="form-control"
                                                               value="<%= food[i].name%>">
                                                        <label>Description</label>
                                                        <input type="text"
                                                               id="description"
                                                               name="description"
                                                               class="form-control"
                                                               value="<%= food[i].description%>">
                                                        <label>Food Type</label>
                                                        <div class="input-group mb-3">
                                                            <select id="type"  name="type" class="form-control select2" style="width: 100%;" placehp>
                                                                <% if (typeof FoodTypeArray !== 'undefined' && FoodTypeArray.length > 0) {%>
                                                                    <option value="<%= food[i].type._id %>"selected><%= food[i].type.name %></option>
                                                                <%for (var j = 0; j < FoodTypeArray.length; j++) { %>
                                                                    <option  name ="restaurantName" value="<%= FoodTypeArray[j]._id%>"><%= FoodTypeArray[j].name %></option>
                                                                <%}%>
                                                                <%}%>
                                                            </select>
                                                        </div>
                                                        <label>Price</label>
                                                        <input type="text"
                                                               id="price"
                                                               name="price"
                                                               class="form-control"
                                                               value="<%= food[i].price %>">
                                                        <label>Restaurant</label>
                                                        <div class="input-group mb-3">
                                                            <select id="restaurant"  name="restaurant" class="form-control select2" style="width: 100%;">
                                                                <% if (typeof restaurants !== 'undefined' && restaurants.length > 0) {%>
                                                                    <option name="restaurant" value="<%= food[i].restaurant._id %>" selected><%= food[i].restaurant.name %></option>
                                                                <%for (var k = 0; k < restaurants.length; k++) { %>
                                                                    <option  name ="restaurant" value="<%= restaurants[k]._id%>"><%= restaurants[k].name %></option>
                                                                <%}%>
                                                                <%}%>
                                                            </select>
                                                        </div>
                                                        <p class="project-actions text-right">
                                                            <button type="submit" class="btn btn-success">Submit</button>
                                                        </p>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
            </div>
        </div>
    </div>
</main>

<script>
    function myMap() {
        var mapProp= {
            center:new google.maps.LatLng(43.8575738,18.4098533),
            zoom:14,
        };
        var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);


        const geocoder = new google.maps.Geocoder();
        const infowindow = new google.maps.InfoWindow();
        var x = document.getElementById("address");

        document.getElementById("dugme").addEventListener("click", () => {
            getLocation();
        });
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                x.value = "Geolocation is not supported by this browser.";
            }
        }

        function showPosition(position) {
            const latlng = {
                lat: position.coords.latitude,
                lng:position.coords.longitude
            };
            geocoder.geocode({ location: latlng }, (results, status) => {
                if (status === "OK") {
                    if (results[0]) {
                        x.value = results[0].formatted_address;
                        placeMarker(latlng);
                    } else {
                        window.alert("No results found");
                    }
                } else {
                    window.alert("Geocoder failed due to: " + status);
                }
            });

        }
        document.getElementById("submit").addEventListener("click", () => {
            geocodeAddress(geocoder, map);
        });
        var Mar;

        function placeMarker(location) {
            if ( Mar ) {
                Mar.setPosition(location);
                geocoder.geocode({ location}, (results, status) => {
                    if (status === "OK") {
                        if (results[0]) {
                            infowindow.setContent(results[0].formatted_address);
                            //console.log(results[0].formatted_address);
                            x.value = results[0].formatted_address;
                            infowindow.open(map, Mar);
                        } else {
                            window.alert("No results found");
                        }
                    } else {
                        window.alert("Geocoder failed due to: " + status);
                    }
                });
            } else {
                Mar = new google.maps.Marker({
                    position: location,
                    map: map
                });
                Mar.setPosition(location);
                geocoder.geocode({ location }, (results, status) => {
                    if (status === "OK") {
                        if (results[0]) {
                            infowindow.setContent(results[0].formatted_address);
                            //console.log(results[0].formatted_address);
                            x.value = results[0].formatted_address;
                            infowindow.open(map, Mar);
                        } else {
                            window.alert("No results found");
                        }
                    } else {
                        window.alert("Geocoder failed due to: " + status);
                    }
                });
            }
        }
        function geocodeAddress(geocoder, resultsMap) {
            const address = document.getElementById("address").value;
            geocoder.geocode({ address: address }, (results, status) => {
                if (status === "OK") {
                    resultsMap.setCenter(results[0].geometry.location);
                    new google.maps.Marker({
                        map: resultsMap,
                        position: results[0].geometry.location,
                    });
                } else {
                    alert("Geocode was not successful for the following reason: " + status);
                }
            });
        }
        google.maps.event.addListener(map, 'click', function(event) {
            placeMarker(event.latLng);
        });
    }

</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVWoPIcc1pz1z5p_Ja6_CD7Ed9MzWN_ko&callback=myMap"></script>

</body>
</html>

