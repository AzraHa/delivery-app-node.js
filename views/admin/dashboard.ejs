<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <!-- Fontawesome-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>

<body>
<main role="main">
    <% include partials/navbar %>
    <div class="container-fluid">
        <div class="row">
            <%include partials/sidebar %>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h1 class="h2">Dashboard</h1>
                </div>
                <!-- TABLE: LATEST ORDERS -->
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">Latest Orders</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                <tr>
                                    <th>No:</th>
                                    <th>Order ID</th>
                                    <th>Status</th>
                                    <th>Supplier</th>
                                    <th>Restaurant</th>
                                    <th>Customer</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% if (typeof order !== 'undefined' && order.length > 0) {%>
                                <%for(let i=0;i<order.length;i++){%>
                                    <tr>
                                        <td><%= i+1 %></td>
                                        <td><a href="/admin/order/<%=order[i]._id %>"><%=order[i]._id %></a></td>
                                        <td><span class="badge badge-success"><%= order[i].status %></span></td>
                                        <td><%= order[i].supplier[0].name %></td>
                                        <%for(let j=0;j<order[i].restaurant.length;j++){%>
                                            <td><a href="#"><li class="list-group-item"><%= order[i].restaurant[j].name %></li></a> </td>
                                        <%}%>
                                        <td><%= order[i].customer.name %></td>
                                        <td></td>
                                    </tr>
                                <%}%>
                                <%}%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="/admin/orders" class="btn btn-sm btn-secondary float-right">View All Orders</a>
                    </div>

                </div>
                <!-- TABLE: LATEST ORDERS -->
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">Suppliers</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                <tr>
                                    <th>No: </th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Restaurant</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>

                                    <% if (typeof suppliersArray !== 'undefined' && suppliersArray.length > 0) {%>
                                    <%for (var i = 0; i < suppliersArray.length; i++) { %>
                                        <tr>
                                            <td><%= i+1 %> </td>
                                            <td><%= suppliersArray[i].name %></td>
                                            <td><%= suppliersArray[i].email %></td>
                                            <td>
                                                <ul class="list-group">
                                                    <%for(let j=0;j<suppliersArray[i].restaurant.length;j++){%>
                                                        <a href="#"><li class="list-group-item"><%= suppliersArray[i].restaurant[j].name %></li></a>
                                                    <%}%>
                                                </ul>
                                            </td>
                                            <% if(suppliersArray[i].status === true){%>
                                                <td>Active</td>
                                            <%} else {%>
                                                <td>X</td>
                                            <%}%>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" href="/admin/suppliers/<%= suppliersArray[i]._id%>">
                                                    <i class="fa fa-folder">
                                                    </i>
                                                    View
                                                </a>
                                                <a class="btn btn-danger btn-sm" href="/admin/suppliers/delete/<%= suppliersArray[i]._id%>">
                                                    <i class="fa fa-trash">
                                                    </i>
                                                    Delete
                                                </a>
                                            </td>


                                </tr>
                                <%}%>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="/admin/suppliers" class="btn btn-sm btn-secondary float-right">View All Suppliers</a>
                    </div>

                </div>
                <!-- TABLE: LATEST ORDERS -->
                <div class="card">
                    <div class="card-header border-transparent">
                        <h3 class="card-title">Restaurants</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                <tr>
                                    <th>No:</th>
                                    <th>Picture</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <% if (typeof RestaurantArray !== 'undefined' && RestaurantArray.length > 0) {%>
                                    <%for (var i = 0; i < RestaurantArray.length; i++) { %>
                                        <% if(RestaurantArray[i].status === true) {%>
                                            <td><%= i+1 %></td>
                                            <td><img src="../images/<%= RestaurantArray[i].image%>" style="width: 50px;"></td>
                                            <td><%= RestaurantArray[i].name %></td>

                                            <td><%= RestaurantArray[i].address %></td>

                                            <% if(RestaurantArray[i].status === true){%>
                                                <td>Active</td>
                                            <%} else {%>
                                                <td>X</td>
                                            <%}%>
                                            <td class="project-actions text-right">
                                                <a class="btn btn-primary btn-sm" href="/admin/restaurants/<%= RestaurantArray[i]._id%>">
                                                    <i class="fa fa-folder">
                                                    </i>
                                                    View
                                                </a>
                                                <a class="btn btn-danger btn-sm" href="#">
                                                    <i class="fa fa-trash">
                                                    </i>
                                                    Delete
                                                </a>
                                            </td>


                                        <% } %>
                                </tr>
                                <%}%>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer clearfix">
                        <a href="/admin/restaurants" class="btn btn-sm btn-secondary float-right">View All Restaurants</a>
                    </div>

                </div>

                </div>
            </div>
        </div>
    </div>
</main>
</body>
</html>
