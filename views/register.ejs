    <div class="naslovna-login-register">
        <div class="register-box">
            <div class="card card-outline card-primary">
                <div class="card-header text-center">
                    <a href="" class="h1"><b>Register</b></a>
                </div>
                <div class="card-body">
                    <p class="login-box-msg">Register a new membership</p>
                <% include ./partials/messages %>
                <form action="/users/register" method="POST">

                    <div class="input-group mb-3">
                        <label for="name" class="col-sm-2 col-form-label mr-2">Full name</label>
                        <input type="name"
                               id="name"
                               name="name"
                               class="form-control"
                               placeholder="Full name"
                               value="<%= typeof name != 'undefined' ? name : '' %>">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fa fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <label for="inputEmail3" class="col-sm-2 col-form-label mr-2">Address</label>
                        <input type="text"
                               id="address"
                               name="address"
                               class="form-control"
                               placeholder="Address"
                               value="<%= typeof address != 'undefined' ? address : '' %>">
                        <div class=" input-group-append ">
                            <div class="input-group-append" style="border: 1px solid #F9723D;">
                                <div class="input-group-text">
                                    <p class="fa fa-map-marker" id="dugme"></p>
                                </div>
                                <input id="submit" type="button" value="Search" style="color: #F9723D;" />
                            </div>
                        </div>
                        <div class=" input-group mb-3 ">
                            <label for="inputEmail3 " class="col-sm-2 col-form-label mr-2 "></label>
                            <div id="googleMap" class="form-control " style="float: right; position: relative; overflow: hidden; width: 80%; margin: 5px; height: 200px; "></div>

