                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>Total:</th>
                                    <td class="text-right"><%= total %></td>
                                </tr>
                            </table>
                        </div>
                        <div class="text-right">
                            <select id="placanje"  name="placanje" class="form-control select2" style="width: 100%;">
                                <option value="" disabled selected>Payment method</option>
                                <option  name ="" value="kartica">Card</option>
                                <option  name ="" value="gotovina">Cash</option>
                            </select>
                            <label class="text-left" style="width: 100%;">Delivery time </label>
                            <input type="date" id="vrijeme" name="vrijeme" class="form-control select2" style="width: 100%;">
