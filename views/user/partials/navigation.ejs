        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Your order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% if (typeof order !== 'undefined' && order.length > 0) {%>
                <form action="/users/send-order/" method="post">
                    <%}%>
                <div class="modal-body">
                    <!-- Table row -->
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Qty</th>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Restaurant</th>
                                    <th>Subtotal</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% let total=Number(0);%>
                                <% if(typeof order !== "undefined" && order.length >0 ){%>
                                    <%for(let s=0;s<order.length;s++){%>
                                    <%total+=Number(order[s].food[0].price*((order[s].quantity)))%>
                                    <input type="hidden" name="ovo" value="<%=order[0]._id%>">
                                        <tr id="<%=order[s]._id%>">
                                            <td>
                                                <input name="kolicina" type="hidden" value="<%= order[s].quantity %>">
                                                <%= order[s].quantity %>
                                            </td>
                                            <td>
                                                <input  name="naziv"  type="hidden" value="<%= order[s].food[0].name %>">
                                                <%= order[s].food[0].name %>
                                            </td>
                                            <td>
                                                <% let opis = order[s].food[0].description %>
                                                <%= opis.slice(opis,20)+"..."%>
                                            </td>
                                            <td>
                                                <input type="hidden" name="restoran" value="<%=order[s].restaurant[0]._id%>">
                                                <%= order[s].restaurant[0].name %>
                                            </td>
                                            <td class="text-center">
                                                <input type="hidden" name="cijena" value="<%=order[s].food[0].price %>">
                                                <%= order[s].food[0].price %>
                                            </td>
                                            <td class="project-actions text-right">
                                                <a class="close" aria-label="Close" onclick="deleteFromOrder('<%= order[s]._id %>','<%=order[s].food[0]._id%>');">
